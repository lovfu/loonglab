<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>	
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/users/*.view">userAction</prop>
				<prop key="/posts/*.view">messageAction</prop>
			</props>
		</property>
	</bean>
	

	<bean id="userAction" class="com.kejikeji.lbs.web.UserAction" >
		<property name="userService"><ref bean="userService" /></property>
	</bean>
	
	<bean id="messageAction" class="com.kejikeji.lbs.web.Messagection" >
		<property name="messageService"><ref bean="messageService" /></property>
	</bean>

</beans>